{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node",
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
]
}
